{% extends 'base.html.twig' %}

{% block title %}Anmeldung{% endblock %}

{% block body %}
  <div class="section"></div>
  <main>
    <center>
      <div class="section"></div>

      <h5 class="indigo-text">Bitte melden Sie sich mit Ihrem Account an</h5>
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

          <form class="col s12" action="{{ path('login') }}" method="post">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            {% if error %}
                <div class='row'>
                <div class='col s12'>
                    <!-- TODO: handle error -->
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                </div>
                </div>
            {% endif %}

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='text' name='_username' id='username'  value="{{ last_username }}"/>
                <label for='email'>Ihr Benutzername</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='password' name='_password' id='password' />
                <label for='password'>Ihr Passwort</label>
              </div>
            </div>

            <!-- input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" -->

            <br />
            <center>
              <div class='row'>
                <button type='submit' class='col s12 btn btn-large waves-effect indigo'>Anmelden</button>
              </div>
            </center>
          </form>
        </div>
      </div>
    </center>

    <div class="section"></div>
    <div class="section"></div>
  </main>
{% endblock %}
